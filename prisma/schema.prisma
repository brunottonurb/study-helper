// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String   @id
  name        String
  description String
  icon        String
  color       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  topics      Topic[]
}

model Topic {
  id           String         @id
  title        String
  description  String
  icon         String?
  categoryId   String
  confidence   String         // beginner, intermediate, advanced, expert
  lastReviewed String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  category     Category       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  keyPoints    KeyPoint[]
  codeExamples CodeExample[]
  quizQuestions QuizQuestion[]
  resources    Resource[]
}

model KeyPoint {
  id          String   @id @default(cuid())
  topicId     String
  title       String
  description String
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  topic       Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
}

model CodeExample {
  id          String   @id @default(cuid())
  topicId     String
  title       String
  language    String
  code        String
  explanation String?
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  topic       Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
}

model QuizQuestion {
  id        String   @id @default(cuid())
  topicId   String
  question  String
  answer    String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  topic     Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
}

model Resource {
  id        String   @id @default(cuid())
  topicId   String
  url       String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  topic     Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
}
